<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
	<strong>Microposts:</strong>
	<%count =0 %>
	<% @user.microposts.each do |micropost|%>
	<p>
		<% count = count + 1 %>
		<td><%= count %></td> 
		<td><%= micropost.content %></td>
		<td><%= link_to 'Show', micropost %></td> 
	</p>
	<% end %>
</p>


